<Page
    x:Class="test_universalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,10,10">
        <RelativePanel>
            <StackPanel Name="browserStack" Orientation="Horizontal" VerticalAlignment="Top" Width="350">
                <TextBox x:Name="browserPath" Height="10" TextWrapping="Wrap" Text="data file path" VerticalAlignment="Top" Margin="0"/>
                <Button x:Name="browserBtn" Content=". . ." HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Click="browserBtn_Click"/>
            </StackPanel>
            <StackPanel Name="buttonStack"  Orientation="Horizontal" RelativePanel.Below="browserStack">
                <Button x:Name="reloadBtn" Content="Reload" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" RenderTransformOrigin="0.162,0.473" Click="reloadBtn_Click"/>
                <Button x:Name="addBtn" Content="Save" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="32" Click="addBtn_Click"/>
            </StackPanel>
            <GridView RelativePanel.Below="buttonStack" RelativePanel.Above="nextBtn" x:Name="wordGV" Margin="0,5,-350,0">
                <TextBox x:Name="TextBox" Height="261" TextWrapping="Wrap" Text="TextBlock" Width="340"/>
            </GridView>
            <Button RelativePanel.AlignBottomWithPanel="True" x:Name="nextBtn" Content="Next" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Bottom" Click="nextBtn_Click"/>
        </RelativePanel>
    </Grid>
</Page>
