<Page
    x:Class="test_universalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,10,10">
        <StackPanel Padding="0, 0, 0, 0" Margin="0,25,0,35">
            <StackPanel Name="browserStack" Orientation="Horizontal" VerticalAlignment="Top" Width="350">
                <TextBlock x:Name="browserPath" TextWrapping="Wrap" Text="data file path" VerticalAlignment="Top" Margin="0" Width="303" Height="32"/>
                <Button x:Name="browserBtn" Content=". . ." HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Click="browserBtn_Click" RenderTransformOrigin="0.5,0.5" Width="50">
                    <Button.RenderTransform>
                        <CompositeTransform ScaleX="-1"/>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>
            <StackPanel Name="buttonStack"  Orientation="Horizontal" RelativePanel.Below="browserStack">
                <Button x:Name="reloadBtn" Content="Reload" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" RenderTransformOrigin="0.162,0.473" Click="reloadBtn_Click"/>
                <Button x:Name="addBtn" Content="Save" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="32" Click="addBtn_Click"/>
            </StackPanel>
            <TextBox x:Name="TextBox" Height="500" TextWrapping="NoWrap" Text="kotoba" Width="350"/>
        </StackPanel>
        <Button RelativePanel.AlignBottomWithPanel="True" x:Name="nextBtn" Content="Next" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom" Click="nextBtn_Click"/>
    </Grid>
</Page>
