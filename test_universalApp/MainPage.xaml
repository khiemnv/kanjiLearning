<Page
    x:Class="test_universalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
            <TextBlock x:Name="browserPath"
                       Grid.Row="0" Grid.Column="0"
                       TextWrapping="Wrap"
                       Text="data file path"
                       Width="auto" Height="auto"/>
        <Button x:Name="browserBtn"
                Content=". . ."
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="browserBtn_Click">
        </Button>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel Name="buttonStack"
                        Orientation="Horizontal"
                        RelativePanel.Below="browserStack">
                <Button x:Name="reloadBtn"
                        Content="Reload"
                        Click="reloadBtn_Click"/>
                <Button x:Name="addBtn"
                        Content="Save"
                        Click="addBtn_Click"/>
            </StackPanel>
        </StackPanel>
        <TextBox Grid.Row="2"
                 Grid.ColumnSpan="2"
                 x:Name="TextBox"
                 TextWrapping="NoWrap"
                 Text="kotoba"
                 Width="auto"
                 Height="auto"/>
        <Button Grid.Row="3"
                Grid.Column="1"
                x:Name="nextBtn" Content="Next"
                HorizontalAlignment="Right"
                Click="nextBtn_Click"/>
    </Grid>
</Page>
