<Page
    x:Class="test_universalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
            <TextBlock x:Name="browserPath"
                       Grid.Row="0" Grid.Column="0"
                       TextWrapping="Wrap"
                       Text="data file path"
                       Width="auto" Height="auto"/>
        <Button x:Name="browserBtn"
                Content=". . ."
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="browserBtn_Click">
        </Button>
        <StackPanel Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="1,1,1,1">
                <Button x:Name="reloadBtn"
                        Content="Reload"
                        Click="reloadBtn_Click"/>
                <Button x:Name="addBtn"
                        Content="Save"
                        Click="addBtn_Click"/>
        </StackPanel>
        <TextBox Grid.Row="2"
                 Grid.ColumnSpan="2"
                 x:Name="txtBox"
                 TextWrapping="NoWrap"
                 Text="kotoba"
                 Width="auto"
                 Height="auto"
                 Background="Silver"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                x:Name="nextBtn" Content="Next"
                HorizontalAlignment="Right"
                Click="nextBtn_Click"/>
    </Grid>
</Page>
