<Page
    x:Class="test_universalApp.study"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Name="mainGrid"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <!--header-->
        <Grid
            Grid.Row="0"
            Background="Blue">
            <TextBlock Name="headerTxt"
                Margin="1,1,1,1"
                Foreground="White"
                Text="Tab to flip"/>
            <ProgressBar 
                Margin="1,1,1,1"
                Name="loadProgress"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Visibility="Collapsed"/>
            <MediaElement Name="media"/>
        </Grid>
        <!--split view-->

            <!--term & options-->
            <SplitView
                Name="split"
                Grid.Row="1"
                Grid.Column="0"
                Height="auto"
                Width="auto"
                IsPaneOpen="False"
                DisplayMode="CompactOverlay"
                OpenPaneLength="250"
                CompactPaneLength="35"
                >
                <SplitView.Pane>
                    <Grid Name="optionsStack" Background="DarkGray">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Name="optionBtn"
                                Padding="0"
                                VerticalAlignment="Top"
                                Width="35"
                                Height="35">
                            <Image Source="Assets\option.png"></Image>
                        </Button>
                        <Grid Grid.Column="1"
                            Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Margin="5,0,0,0"
                                VerticalAlignment="Center">Options</TextBlock>

                        <ScrollViewer Grid.Row="1">
                            <StackPanel>
                                <CheckBox Name="optWordDetailChk" Margin="10,0,0,0">Show detail</CheckBox>
                                <CheckBox Name="optWordStarChk" Margin="10,0,0,0">Marked words</CheckBox>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="50">Term</TextBlock>
                                    <ComboBox Name="optWordTermCmb" Margin="10,0,0,0"></ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="50">Define</TextBlock>
                                    <ComboBox Name="optWordTermDefineCmb" Margin="10,0,0,0"></ComboBox>
                                </StackPanel>
                                <TextBlock>Speak</TextBlock>
                                <CheckBox Name="optSpkTermChk" Margin="10,0,0,0">Term</CheckBox>
                                <CheckBox Name="optSpkDefineChk" Margin="10,0,0,0">Define</CheckBox>
                                <!--<TextBlock>Search</TextBlock>-->
                                <!--<CheckBox Name="optSrchEnableChk" Margin="10,0,0,0">Search enable</CheckBox>-->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                        <!--half below-->
                        <Grid Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            VerticalAlignment="Top">
                            <Button
                                Padding="0"
                                Grid.Row="1"
                                VerticalAlignment="Top"
                                Name="searchBnt2"
                                Margin="0"
                                Width="35"
                                Height="35">
                                M
                            </Button>
                            <TextBlock Margin="40,0,0,0"
                                VerticalAlignment="Center">
                                Show hide search panel</TextBlock>
                        </Grid>
                    <ScrollViewer
                        Margin="0,40,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                        <StackPanel
                            VerticalAlignment="Bottom">
                            <Button Name="canvasCancel"
                                Padding="0"
                                Margin="0,2,0,2"
                                Width="35"
                                Height="35"
                                Visibility="Collapsed">
                                <Image Source="Assets/cancel.png"/>
                            </Button>
                            <Button Name="canvasAccept"
                                Visibility="Collapsed"
                                Padding="0"
                                Margin="0,2,0,2"
                                Width="35"
                                Height="35">
                                <Image
                                    Source="Assets/accept.png"/>
                            </Button>
                        <Grid Name="canvasEdit">
                                <Button
                                    Padding="0"
                                    Margin="0,2,0,2"
                                    Width="35"
                                    Height="35">
                                    <Image
                                        Source="Assets/pencil.png"/>
                                </Button>
                                <TextBlock Margin="40,0,0,0"
                                    VerticalAlignment="Center">Edit word</TextBlock>
                            </Grid>
                        <Grid Name="canvasSpeak">
                                <Button
                                    Margin="0,2,0,2"
                                    Padding="0"
                                    Width="35"
                                    Height="35">
                                    <Image
                                        Name="speakImage"
                                        Source="Assets/speak.png"/>
                                </Button>
                                <TextBlock Margin="40,0,0,0"
                                    VerticalAlignment="Center">Speak</TextBlock>
                            </Grid>
                        <Grid Name="canvasStar2">
                            <Button
                                    Padding="0"
                                    Margin="0,2,0,2"
                                    Width="35"
                                    Height="35">
                                <Image Name="starImg" Source="Assets/star_m.png"></Image>
                            </Button>
                            <TextBlock Margin="40,0,0,0"
                                    VerticalAlignment="Center">Mark word</TextBlock>
                        </Grid>
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
                </SplitView.Pane>
                <SplitView.Content>
                    <Grid Name="contentPanel"
                          Background="Silver">
                        <Grid.ColumnDefinitions>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Name="searchPanel"
                            Grid.Row="1">
                            <!--search panel-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Name="srchBtn"
                                Padding="0"
                                Width="35">
                            <Image Source="Assets\search.png"></Image>
                            </Button>
                            <TextBox Name="srchTxt"
                                Margin="35,0,0,0"
                                Grid.Row="0"></TextBox>
                            <!--<Button Name="srchBtn"
                            Grid.Row="0"
                            Width="35"
                            Height="35"
                            Padding="0">
                                <Image
                            Margin="0"
                            Width="30"
                            Source="Assets\search.png"></Image>
                            </Button>-->
                            <ScrollViewer Name="rtbScroll" Grid.Row="1">
                                    <RichTextBlock Name="srchRtb">
                                        <Paragraph>
                                            阿 (bảo 8) ⻖(phụ 2)
                                            <LineBreak></LineBreak>
                                            保 (an 9) ホ (moc 5)
                                            <LineBreak></LineBreak>

                                        </Paragraph>
                                        <Paragraph>
                                            para1
                                            <Run>text run</Run>
                                            list item
                                            <LineBreak></LineBreak>
                                            list item 2
                                            <Span>span1</Span>
                                            <Span>span with linebrk
                                            line1
                                                <LineBreak></LineBreak>
                                                line2
                                            </Span>
                                            <Span>
                                                <Span>span in span
                                                    <LineBreak></LineBreak>
                                                    linebr
                                                </Span>
                                            </Span>
                                        </Paragraph>
                                        <Paragraph>para2
                                        </Paragraph>
                                    </RichTextBlock>
                                </ScrollViewer>
                        </Grid>
                        <Grid Name="termGrid"
                            Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <!--<Border Grid.Row="0" BorderThickness="2 2 2 2" BorderBrush="Black"/>-->
                            <TextBlock 
                            Name="termTxt"
                            Text="term"
                            TextWrapping="Wrap"
                            FontSize="48"
                            Foreground="Green"
                            Grid.Row="0"/>
                            <!--<Border Grid.Row="1" BorderThickness="2 2 2 2" BorderBrush="Black"/>-->
                            <TextBlock
                            Name="detailTxt"
                            Text="detail"
                            TextWrapping="Wrap"
                            FontSize="16"
                            Foreground="Black"
                            Grid.Row="1"
                            Width="auto"/>
                            <TextBox
                            Name="editTxt"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Visibility="Collapsed"
                            Background="Silver"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </Grid>
                </SplitView.Content>
            </SplitView>

            <!--canvas buttons-->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Orientation="Vertical"
                >
