            </StackPanel>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="2">
            <TextBlock Name="gridSwipe"></TextBlock>
            <StackPanel Name="bntStack"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                        VerticalAlignment="Top">
            <!--<Button Name="optionBtn" Content=". . ."
                    Margin="1,1,1,1"/>-->
            <!--<Button x:Name="searchBnt2" Content="More"
                    Margin="1,1,1,1"/>-->
            <Button x:Name="sulfBnt" Content="Sulf"
                    Margin="1,1,1,1"/>
            <Button Name="prevBtn" Content="Prev"
                    Margin="1,1,1,1"/>
            <Border
                Margin="1,1,1,1"
                BorderBrush="Silver"
                BorderThickness="2"
                >
                <TextBlock Name="numberTxt" Text="100/100"
                    TextAlignment="Center"
                    VerticalAlignment="Center"
                    />
            </Border>
            <Button x:Name="nextBtn" Content="Next"
                    Margin="1,1,1,1"/>
            <!--<Button x:Name="flipBtn" Content="Flip"
                    Margin="1,1,1,1"/>-->
            </StackPanel>
        </Grid>
        <!--back to page-->
        <Button Name="backBtn"
                Margin="1,1,1,1"
                Grid.Row="4"
                Content="Back"
                HorizontalAlignment="Left"/>
    </Grid>
</Page>
