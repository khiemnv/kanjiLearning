<Page
    x:Class="test_universalApp.study"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1"
                  Grid.ColumnSpan="3"
              Background="Silver">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>


            <SplitView Name="split"
                  Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Grid.RowSpan="2"
                Height="auto"
                Width="auto"
                IsPaneOpen="False"
                DisplayMode="Overlay"
                OpenPaneLength="250">
                <SplitView.Pane>
                    <Grid Name="optionsStack" Background="DarkGray">
                        <StackPanel Margin="48, 0, 0, 0">
                            <TextBlock>Options</TextBlock>
                            <CheckBox Name="detailChk" Margin="10,0,0,0">Show detail</CheckBox>
                            <CheckBox Name="optStarChk" Margin="10,0,0,0">Marked words</CheckBox>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="50">Term</TextBlock>
                                <ComboBox Name="termCmb" Margin="10,0,0,0"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="50">Define</TextBlock>
                                <ComboBox Name="defineCmb" Margin="10,0,0,0"></ComboBox>
                            </StackPanel>
                            <TextBlock>Speak</TextBlock>
                            <CheckBox Margin="10,0,0,0">Term</CheckBox>
                            <CheckBox Margin="10,0,0,0">Define</CheckBox>
                        </StackPanel>
                    </Grid>
                </SplitView.Pane>
                <SplitView.Content>
                    <Grid Background="Silver" Tapped="term_Tapped"
                          ManipulationMode="TranslateX"
                          ManipulationCompleted="term_swiped">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Name="term"
                                   Text="term"
                                   TextWrapping="Wrap"
                                   FontSize="48"
                                   Foreground="Green"
                                   Grid.Row="0"
                                   Grid.ColumnSpan="2"
                                   Width="auto"/>
                        <TextBlock Name="detail"
                                   Text="detail"
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="Black"
                                   Grid.Row="1"
                                   Width="auto"/>
                    </Grid>
                </SplitView.Content>
            </SplitView>
            <Canvas Name="starCanvas"
                    Grid.Column="1"
                    Grid.Row="1"
                    >
                <Ellipse  
                  Name="starEllipse"
                  Fill="#FFFFFF00"  
                  Height="75"  
                  Width="75"  
                  StrokeThickness="5"
                  Stroke="#FFFFFFFF"
                    />
                <Polyline
                Name="starPolyline"
                Canvas.Top="25"
                Canvas.Left="25"
                    Points="0,5 10,20 25,0"
                    Stroke="Black"
                    StrokeThickness="5"/>
                <!--<CheckBox 
                Canvas.Top="20"
                Canvas.Left="25"
                Name="starChk"
                      Width="30"
                      Height="30"
                      />-->
            </Canvas>
        </Grid>
        <StackPanel Orientation="Horizontal"
                    Height="auto"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="1,1,1,1">
            <Button Name="optionBtn" Content="..."/>
            <Button x:Name="sulfBnt" Content="Sulf"
                    Click="sulfBnt_Click"/>
            <Button Name="prevBtn" Content="Prev"
                    Click="prevBtn_Click"/>
            <TextBox Name="numberTxt" Text="1"/>
            <Button x:Name="nextBtn" Content="Next"
                    Click="nextBtn_Click"/>
            <!--<Button x:Name="flipBnt" Content="Flip" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>-->
        </StackPanel>
        <Button Name="back" Content="Back"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Click="back_Click"/>
    </Grid>
</Page>
