<Page
    x:Class="test_universalApp.study"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test_universalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="2"
            Grid.ColumnSpan="3"
            Background="Silver">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="80"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <SplitView Name="split"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Grid.RowSpan="2"
                Height="auto"
                Width="auto"
                IsPaneOpen="False"
                DisplayMode="Overlay"
                OpenPaneLength="250">
                <SplitView.Pane>
                    <Grid Name="optionsStack" Background="DarkGray">
                        <StackPanel Margin="48, 0, 0, 0">
                            <TextBlock>Options</TextBlock>
                            <CheckBox Name="detailChk" Margin="10,0,0,0">Show detail</CheckBox>
                            <CheckBox Name="optStarChk" Margin="10,0,0,0">Marked words</CheckBox>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="50">Term</TextBlock>
                                <ComboBox Name="termCmb" Margin="10,0,0,0"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="50">Define</TextBlock>
                                <ComboBox Name="defineCmb" Margin="10,0,0,0"></ComboBox>
                            </StackPanel>
                            <TextBlock>Speak</TextBlock>
                            <CheckBox Margin="10,0,0,0">Term</CheckBox>
                            <CheckBox Margin="10,0,0,0">Define</CheckBox>
                        </StackPanel>
                    </Grid>
                </SplitView.Pane>
                <SplitView.Content>
                    <Grid Background="Silver" Tapped="term_Tapped"
                          ManipulationMode="TranslateX"
                          ManipulationCompleted="term_swiped">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <!--<Border Grid.Row="0" BorderThickness="2 2 2 2" BorderBrush="Black"/>-->
                        <TextBlock Name="termTxt"
                                   Text="term"
                                   TextWrapping="Wrap"
                                   FontSize="48"
                                   Foreground="Green"
                                   Grid.Row="0"
                                   Width="auto"/>
                        <!--<Border Grid.Row="1" BorderThickness="2 2 2 2" BorderBrush="Black"/>-->
                        <TextBlock Name="detailTxt"
                                   Text="detail"
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="Black"
                                   Grid.Row="1"
                                   Width="auto"/>
                        <TextBox Name="editTxt"
                                 Grid.Row="0"
                                 Grid.RowSpan="2"
                                 Visibility="Collapsed"
                                 Background="Silver"/>
                    </Grid>
                </SplitView.Content>
            </SplitView>
            <!--canvas buttons-->
            <Grid Grid.Column="1"
                Grid.Row="0"
                  Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Canvas Name="canvasEdit"
                    Grid.Column="0"
                    Grid.Row="2">
                    <Ellipse Name="editEllipse"
                          Fill="LightGray"
                          Height="80"  
                          Width="80"  
                          StrokeThickness="5"
                          Stroke="White"/>
                    <Image Canvas.Top="15"
                    Canvas.Left="15"
                    Source="Assets/pencil.png"
                    Height="50"
                    Width="50"/>
                </Canvas>
                <Canvas Name="canvasAccept"
                    Grid.Column="0"
                    Grid.Row="2"
                        Visibility="Collapsed">
                    <Ellipse Name="acceptEllipse"
                      Fill="LightGray"
                      Height="80"  
                      Width="80"  
                      StrokeThickness="5"
                      Stroke="White"/>
                    <Image Canvas.Top="15"
                    Canvas.Left="15"
                    Source="Assets/accept.png"
                    Height="50"
                    Width="50"/>
                </Canvas>
                <Canvas Name="canvasCancel"
                    Grid.Column="0"
                    Grid.Row="1"
                        Visibility="Collapsed">
                    <Ellipse Name="cancelEllipse"
                        Fill="LightGray"
                      Height="80"  
                      Width="80"  
                      StrokeThickness="5"
                      Stroke="White"/>
                    <Image Canvas.Top="15"
                    Canvas.Left="15"
                    Source="Assets/cancel.png"
                    Height="50"
                    Width="50"/>
                </Canvas>
                <Canvas Name="canvasSpeak"
                    Grid.Column="0"
                    Grid.Row="3">
                    <Ellipse Name="speakEllipse"
                        Fill="LightGray"
                        Height="80"  
                        Width="80"  
                        StrokeThickness="5"
                        Stroke="White"/>
                    <Image Canvas.Top="15"
                        Canvas.Left="15"
                        Source="Assets/speak.png"
                        Height="50"
                        Width="50"/>
                </Canvas>
                <Canvas Name="starCanvas"
                    Grid.Column="0"
                    Grid.Row="4">
                    <Ellipse Name="starEllipse"
                      Fill="#FFFFFF00"  
                      Height="80"  
                      Width="80"  
                      StrokeThickness="5"
                      Stroke="#FFFFFFFF"/>
                    <Path Name="starPolyline"
                        Canvas.Top="25"
                        Canvas.Left="20"
                        Stroke="DarkGoldenRod" 
                        StrokeThickness="5"
                        Data="M 0,16 C 14,34 22,34 40,4"/>
                </Canvas>
                <MediaElement Name="media"/>
            </Grid>
        </Grid>
        <StackPanel Orientation="Horizontal"
                    Height="auto"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    Margin="1,1,1,1">
            <Button Name="optionBtn" Content="..."/>
            <Button x:Name="sulfBnt" Content="Sulf"
                    Click="sulfBnt_Click"/>
            <Button Name="prevBtn" Content="Prev"
                    Click="prevBtn_Click"/>
            <TextBox Name="numberTxt" Text="1"/>
            <Button x:Name="nextBtn" Content="Next"
                    Click="nextBtn_Click"/>
            <!--<Button x:Name="flipBnt" Content="Flip" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>-->
        </StackPanel>
        <Button Name="back" Content="Back"
                Grid.Row="4"
                HorizontalAlignment="Left"
                Click="back_Click"/>
    </Grid>
</Page>
